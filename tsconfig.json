{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noLib": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "newLine": "LF",
        "outDir": "bld"
    },
    "exclude": [
        "node_modules",
        "ruff_modules"
    ]
}